.standup-tab {
  padding: 20px;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.standup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.tasks-table-container {
  flex: 1;
  overflow-y: auto;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
}

.standup-table {
  width: 100%;
  border-collapse: collapse;
}

.standup-table th,
.standup-table td {
  padding: 10px;
  text-align: left;
  border-bottom: 1px solid #f0f0f0;
}

.standup-table th {
  background-color: #f9f9f9;
  font-weight: 600;
  position: sticky;
  top: 0;
}

.task-title {
  font-weight: 500;
  color: #333;
}

.task-summary {
  font-size: 0.85em;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200px;
}

.compact-select {
  padding: 4px 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 0.9em;
  width: 100%;
  max-width: 120px;
}

.compact-number {
  padding: 4px 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 0.9em;
  width: 60px;
}

.badge-success {
  background-color: #e6fffa;
  color: #00a080;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 0.85em;
  border: 1px solid #b2f5ea;
}

.no-data {
  text-align: center;
  color: #999;
  padding: 20px;
}
